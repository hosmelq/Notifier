<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ticketsurf="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/content_padding_normal"
    tools:context=".ui.WelcomeActivity">

    <LinearLayout
        android:gravity="center"
        android:layout_gravity="top|center"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical" >

        <ImageView
            android:layout_height="wrap_content"
            android:layout_marginBottom="48dp"
            android:layout_marginTop="48dp"
            android:layout_width="wrap_content" />
        <!--android:src="@drawable/ts_logo"-->

    </LinearLayout>


    <LinearLayout
        android:layout_gravity="bottom"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical" >

        <android.support.v7.widget.CardView
            android:id="@+id/button_signup"
            ticketsurf:cardBackgroundColor="@color/theme_primary_dark"
            ticketsurf:cardCornerRadius="3dp"
            ticketsurf:cardElevation="1dp"
            ticketsurf:cardPreventCornerOverlap="false"
            ticketsurf:cardUseCompatPadding="true"
            style="@style/Welcome.Button" >

            <TextView
                android:text="@string/welcome_button_signup"
                android:textColor="#fff"
                style="@style/Welcome.Button.Text" />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/button_login"
            ticketsurf:cardBackgroundColor="@null"
            ticketsurf:cardElevation="0dp"
            ticketsurf:cardPreventCornerOverlap="false"
            ticketsurf:cardUseCompatPadding="true"
            style="@style/Welcome.Button" >

            <TextView
                android:text="@string/welcome_button_login"
                android:textColor="@color/theme_primary_dark"
                style="@style/Welcome.Button.Text" />

        </android.support.v7.widget.CardView>

    </LinearLayout>

</FrameLayout>
